
@import "../../../wxParse/wxParse.wxss";
page {
    background: white;
    height: 100%;
    /* display: flex;
    flex-direction: column;
    justify-content: flex-start; */
}
.detail-title{
    text-align: right;
    padding: 26rpx 46rpx 0;
    position: fixed;
    opacity: 0.4;
    left: 50%;
    transform: translate(-50%, 0);
    bottom: 40rpx;
    z-index: 10;
}
.detail-content {
    font-size: 28rpx;
    padding: 0 40rpx;
}
.modal-layer{
    height: 100%;
    /* background-color: rgba(0,0,0, 0.4) */
}
.edit-modal{
    /* width: 90%; */
    height: 100%;
    background-color: white;
    position: relative;
}
.edit-items {
    margin-top: 120rpx;
    height: 30%;
    width: 100%;
    overflow-y: scroll;
    position: relative;
    border-bottom: 2rpx solid black;
    /* top: 0;
    left: 0;
    position: absolute; */
}
.first-item, .sec-item{
    position: relative;
}
.first-item-del, .sec-item-del{
    display: inline-block;
    position: absolute;
    top: 4rpx;
    right: 10rpx;
}
.first-item-add,.sec-item-add{
    background: brown;
    text-align: center;

}
.sec-item-add{
    width: 60rpx;
    height: 46rpx;
    vertical-align: middle;
    display: inline-block;
}
.first-item-add{
    position: fixed;
    right: 40rpx;
    width: 60rpx;
    height: 60rpx;
    top: 44%;
    z-index: 10;
}
.edit-modal input{
    display: inline-block;
}
.part{
    height: 100%;
}
.name{
    position: relative;
    border-top: 1rpx solid black;
    border-bottom: 1rpx solid black;
    margin-top: -2rpx;
    height: 60rpx;
}
.first-name{
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 1;
}
.sec-name{
    position: fixed;
    top: 60rpx;
    left: 0;
    z-index: 1;
    width: 100%;
}
.name-item{
    display: inline-block;
    border-radius: 3rpx;
    margin: 0 8rpx;
    /* height: 60rpx; */
    padding: 2rpx 6rpx;
    font-size: 20rpx;
    line-height: 60rpx;
}
.second-item{
    /* display: inline-block;
    vertical-align: top; */
    margin-left: 40rpx;
}
.choosed-tag{
    border: 1rpx solid red
}
.style-input{
    width: 100rpx;
    display: inline-block;
    border: 1rpx solid red;
    border-radius: 4rpx;
    font-size: 24rpx;
    min-height: 30rpx;
    line-height: 30rpx;
    vertical-align: middle;
    position: absolute;
    top: 12rpx;
    right: 64rpx;
    height: 36rpx;
}
/* .add-node{
    width: 40rpx;
    display: inline-block;
} */
.rich-text-img{
    display: block;
    width: 100%;
    height: 300rpx;
    margin-left: auto;
    margin-right: auto;
}
.rich-text-p{
    text-indent: 20px;
}
.rich-text-code{
    background: #f5f5f5;
    /* color: white; */
    display: block;
    padding-top: 6rpx;
    padding-bottom: 6rpx;
    font-weight: 400;
    margin: 0 10rpx 0 10rpx;
    position: relative;
}
.rich-text-code::before{
    position: absolute;
    right: 0;
    display: inline-block;
    top: 0;
    height: 100px;
    width: 100px;
    background: black;
    border-right: 1px solid black;
}
.img-input{
    vertical-align: top;
    width: 200rpx;
}
.scroll-bottom{
    position: relative;
    height: 60%;
    width: 100%;
}
.rich-text {
    width: 100%;
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    height: 100%;
    overflow-y: scroll;
}