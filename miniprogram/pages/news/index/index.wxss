/* pages/user/index.wxss */
/**index.wxss**/

page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }
  
  .container {

  }
  .banner{
    width: 100%;
    height: 300rpx;
  }
  .banner image {
    width: 100%;
    height: 300rpx;
  }
  .add-banner{
    height: 100rpx;
    border: 2rpx solid red;
    width: 100%;
    position: relative;
  }
  .add-banner:after{
      width: 20rpx;
      height: 20rpx;
      position: absolute;
      top: 50rpx;
      right: 50%;
      border-left: 2rpx solid red;
      border-top: 2rpx solid red;
      content: '';
      transform: translate(20rpx);
  }
  .add-banner:before{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 30rpx;
    left: 50%;
    content: '';
    border-right: 2rpx solid red;
    border-bottom: 2rpx solid red;
    transform: translate(-22rpx)
  }
  .add-banner-layer{
    position: fixed;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.4);
    top: 0;
    left: 0;
    z-index: 999;
  }

  .add-banner-modal{
    background: white;
    border-radius: 40rpx;
    width: 500rpx;
    margin: 100rpx auto;
    padding: 60rpx 40rpx 30rpx;
  }
  .image-default{
    width: 450rpx;
    height: 240rpx;
    border: 2rpx solid red;
    position: relative;
    margin: 0 auto;
  }
  .image-default:after{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 120rpx;
    right: 50%;
    border-left: 2rpx solid red;
    border-top: 2rpx solid red;
    content: '';
    transform: translate(20rpx);
  }
  .image-default:before{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 100rpx;
    left: 50%;
    content: '';
    border-right: 2rpx solid red;
    border-bottom: 2rpx solid red;
    transform: translate(-22rpx)
  }
  .banner-image{
    height: 100%;
    width: 100%;
    
  }
  .desc-default{
    font-size: 30rpx;
    margin: 30rpx;
  }
  .save-banner{
    width: 280rpx;
    height: 85rpx;
    background: blueviolet;
    color: white;
    line-height: 78rpx;
    text-align: center;
    font-weight: 700;
    margin: 0 auto;
    border-radius: 49rpx;
  }